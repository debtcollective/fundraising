<div class="pb-5 border-b border-gray-200">
  <h2 class="text-xl font-medium leading-6 text-gray-900">
    My membership
  </h2>
  <p class="max-w-4xl mt-2 text-gray-500 text-md">Here you can change your membership preferences.</p>
</div>

<!-- Membership -->
<section aria-labelledby="membership_heading">
  <div class="mt-8">
    <p class="max-w-4xl mt-2 text-gray-900 text-md">Your membership is <%= @membership&.pretty_status %></p>

    <div class="flex items-center justify-between">
      <p class="subscription-amount">
        <span class="mt-1 text-4xl font-semibold text-gray-900"><span class="text-sm align-text-top">$</span><%= @membership&.amount.to_i %></span>
        <span class="text-sm font-medium text-gray-500 truncate">/ month</span>
      </p>

      <div class="py-3 text-right sm:px-6">
        <%= link_to "Change amount", edit_membership_amount_path, class: "inline-flex justify-center px-4 py-2 text-sm font-medium text-white bg-gray-800 border border-transparent rounded-md shadow-sm hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900" %>
    </div>
  </div>
</section>
